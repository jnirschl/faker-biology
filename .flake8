[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,D400,S101,N812
exclude = build,data,dist,docs,notebooks,models,reports,__pycache__,.dvc,.git,.github,.idea,.pytest_cache,.venv,.tox,*.json,*.md,*.yaml
max-line-length = 88
max-complexity = 10
docstring-convention = google
per-file-ignores = tests/*:S101, __init__.py:F401, tests/*:F401,tests/*:F821, tests/*:S311
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
